<% layout('/layouts/boilerplate') %>
<body>
  <h2>All Listings</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of allListings){ %>
    <a style="text-decoration: none;" href="/listings/<%= list._id %>">
      <div class="card listing-card col">
        <img
          src="<%= list.image.url %>"
          class="card-img-top"
          alt="listing_img"
          style="height: 18rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b> <br />
            &#8377;<%= list.price.toLocaleString("en-in") %> / night
          </p>
        </div>
      </div>
      <% } %>
    </a>
  </div>
</body>
