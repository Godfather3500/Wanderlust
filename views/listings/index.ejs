<% layout('/layouts/boilerplate') %>
<body>
  <div id="filters">
    <a href="/listings"
      ><div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div></a
    >

    <a href="/listings?category=Rooms">
      <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    </a>
    
    <a href="/listings?category=Iconic+cities">
      <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Iconic cities</p>
    </div>
    </a>
    
    <a href="/listings?category=Mountains">
      <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    </a>

    <a href="/listings?category=Castles">
      <div class="filter hide-on-small-screen">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    </a>

    <a href="/listings?category=Pools">
       <div class="filter hide-on-small-screen">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    </a>

    <a href="/listings?category=Camping">
      <div class="filter hide-on-small-screen">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </div>
    </a>
   
    <a href="/listings?category=Farms">
      <div class="filter hide-on-small-screen">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
    </a>

    <a href="/listings?category=Arctic">
      <div class="filter hide-on-small-screen">
        <div><i class="fa-solid fa-snowman"></i></div>
        <p>Arctic</p>
      </div>
    </a>

    <a href="/listings?category=Beachs">
      <div class="filter hide-on-small-screen">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Beachs</p>
      </div>
    </a>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Price after taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let list of allListings){ %>
    <a style="text-decoration: none" href="/listings/<%= list._id %>">
      <div class="card listing-card col">
        <img
          src="<%= list.image.url %>"
          class="card-img-top"
          alt="listing_img"
          style="height: 18rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b> <br />
            &#8377;<%= list.price.toLocaleString("en-in") %> / night
            <i class="tax-info">&nbsp; + &nbsp; 18% GST </i>
          </p>
        </div>
      </div>
      <% } %>
    </a>
  </div>
</body>
