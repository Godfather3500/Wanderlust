<% layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3" style="font-size: 14px">
    <div class="col-7 offset-2">
      <h3>Edit your Listing</h3>
      <form
        class="needs-validation"
        method="post"
        action="/listings/<%= list._id %>?_method=PUT"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label><br />
          <input
            class="form-control"
            type="text"
            value="<%= list.title %>"
            name="title"
            id="title"
            placeholder="Enter title"
            required
          />
          <div class="invalid-feedback">Title is required</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            type="text"
            name="description"
            id="description"
            placeholder="Enter description"
            required
          >
<%= list.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3 col-lg-4">
          Previous Image <br>
          <img src="<%= list.image.url %>" style="max-width: 400px; height: 250px;">
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Upload New Image</label>
          <input
            class="form-control"
            type="file"
            id="image"
            name="image"
          />
          <div class="invalid-feedback">Image is required</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price</label>
            <input
              class="form-control"
              type="number"
              value="<%= list.price %>"
              name="price"
              id="price"
              placeholder="Enter price (in Rs.)"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label class="form-label" for="country">Country</label>
            <input
              class="form-control"
              type="text"
              value="<%= list.country %>"
              name="country"
              id="country"
              placeholder="Enter country"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>
        <div class="mb-3 mb-3">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            value="<%= list.location %>"
            name="location"
            id="location"
            placeholder="Enter location"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="mb-3">
          <label for="category">Category</label>
          <select class="form-select" name="category" id="category">
            <option selected><%= list.category %></option>
            <option value="Mountains">Mountains</option>
            <option value="Arctic">Arctic</option>
            <option value="Iconic cities">City</option>
            <option value="Castles">Castle</option>
            <option value="Amazing Pools">Pool</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farm</option>
            <option value="Beachs">Beach</option>
          </select>
        </div>
        <button class="btn btn-dark edit-btn mb-3 mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
